{
  "manifest_version": 2,
  "name": "Celestus tools",
  "version": "2.0",
  "description": "Adds tools to ease actions in celestus",
  "author": "Florian CASTELAIN (Andromelus)",
  "homepage_url": "https://github.com/floriancastelain/celestus-chrome_extension",
  "icons": {
    "48": "icons/androgiciel-48.png"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icons/androgiciel-48.png",
    "default_title": "Celestus",
    "default_popup":"popup/celestus.html"
  }
}